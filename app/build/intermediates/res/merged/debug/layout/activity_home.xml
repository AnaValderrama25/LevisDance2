<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.levisdance.levisdance.Home">

    <ImageButton
        android:id="@+id/iraHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:backgroundTint="@color/icons"
        app:srcCompat="@android:drawable/ic_menu_compass"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/iraUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/icons"
        app:srcCompat="@android:drawable/ic_menu_myplaces"

        android:onClick="user"
        android:layout_alignBottom="@+id/agregarFoto"
        android:layout_alignEnd="@+id/items_list"
        android:layout_marginEnd="27dp" />

    <android.support.design.widget.FloatingActionButton

        android:id="@+id/agregarFoto"
        android:onClick="agregarFoto"
        android:layout_width="79dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        app:backgroundTint="@color/primary"
        app:fabSize="normal"
        app:rippleColor="@color/divider"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="475dp" />

    <ListView
        android:id="@+id/items_list"
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageButton
        android:id="@+id/config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cambiarContrasenia"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/primary"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

</RelativeLayout>
