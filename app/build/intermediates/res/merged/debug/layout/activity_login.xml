<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.levisdance.levisdance.Vista.Login">

    <Button
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/registrarse"
        android:backgroundTint="@color/primary_dark"
        android:onClick="iniciarSesionConFacebook"
        android:text="Iniciar sesión con Facebook"
        android:textColor="@color/icons" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Correo electrónico" />

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/correo"
        android:layout_below="@+id/correo"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Contraseña" />

    <Button
        android:id="@+id/registrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/contrasena"
        android:layout_marginTop="23dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:onClick="iniciarSesion"
        android:text="Iniciar"
        android:textColor="@color/icons" />

    <Button
        android:text="iniciar sesión con facebook"
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="17dp"
        android:onClick="iniciarSesionFacebook"
        android:layout_below="@+id/Registrateahora"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/nuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="12dp"
        android:text="¿Si no tienes cuenta?"
        android:layout_below="@+id/facebook"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Registrateahora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@color/icons"
        android:text="Registrate Ahora"
        android:textSize="10sp"
        android:layout_below="@+id/facebook"
        android:layout_toEndOf="@+id/nuevo" />

</RelativeLayout>
